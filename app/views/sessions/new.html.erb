<!-- Content Sections -->
<div id="content">
   <!-- Hero Image -->
   <section id="blog-hero-image">
      <div class="layer"></div>
      <div class="container-fluid">
        <div class="e-divider-20"></div>
        <div class="e-divider-10"></div>
        <div class="row">
          <div id="login-form" class="container-fluid padding-side-50">
            <div class="col-md-6 col-xs-12">
              <h3>Login to Beleza</h3>
              <p>Enter your email and password to log on:</p>
              <%= form_tag sessions_path do %>
                  <div class="form-group">
                    <label class="sr-only">Email</label>
                    <input type="text" name="email" placeholder="Email..." class="l-form-2-username form-control" id="l-form-2-username">
                  </div>
                  <div class="form-group">
                    <label class="sr-only">Password</label>
                    <input type="password" name="password" placeholder="Password..." class="l-form-2-password form-control" id="l-form-2-password">
                  </div>
                  <button type="submit" class="btn btn-danger">Sign in!</button><br><br>
                <% end%>
                <p>Dont have an account?  <%= link_to "Log in!", "/users/new", style: 'font-weight:bold;', method: :get %><p>
            </div> <!-- / col -->

            <!-- Non mobile Error Flash -->
          <div class="hidden-sm hidden-xs visible-md visible-lg col-sm-6 l-form-2-box l-form-2-box-text wow fadeInUp animated" style="visibility: visible; animation-name: fadeInUp;">
              <% if flash.alert %>
                <div class="alert alert-danger">
                  <div class="center-text" id="error_explanation">
                    <ul>
                      <li class="text-danger"><h1><%= flash.alert %></h1></li>
                    </ul>
                  </div>
                </div>
              <% end %>
            <p class="medium-paragraph" style="width:700px"></p>
          </div> <!-- / Error Flash -->

          </div> <!-- / login form -->

          <!-- Mobile Error Flash -->
          <div class="visible-xs col-sm-4 l-form-2-box l-form-2-box-text wow fadeInUp animated" style="visibility: visible; animation-name: fadeInUp;">
              <% if flash.alert %>
                <div class="alert alert-danger">
                  <div class="center-text" id="error_explanation">
                    <ul>
                      <li class="text-danger"><h1><%= flash.alert %></h1></li>
                    </ul>
                  </div>
                </div>
              <% end %>
            <p class="medium-paragraph" style="width:700px"></p>
          </div> <!-- / Error Flash -->

         </div> <!-- / row -->
      </div> <!-- / container -->
   </section>
 </div> <!-- / content -->

