<!-- Content Sections -->
<div id="content">

   <!-- Hero Image -->
   <section id="blog-hero-image">
      <div class="layer"></div>
      <div class="container-fluid hero-wrapper">
         <div class="row text-right">
            <div class="col-md-12">
               <div class="hero-text">
                  <h2 class="font-accident-two-normal"><%= @user.first_name %> <%= @user.last_name[0] %></h2>
                  <p class="font-accident-two-normal e-uppercase letter-spacing-03">
                     Profile page!
                  </p>
               </div>
            </div>
         </div>
      </div>
   </section> <!-- /Hero Image -->

