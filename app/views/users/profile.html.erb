                     <div class="post-detail">
                        <h2 class="entry-title"><a href="#!">1</a></h2>
                        <div class="metas">
                           Posted on: <a href="#!" class="meta-date"><%=@user.photo_one_updated_at.to_date%></a>&nbsp;
                        </div>
                     </div>
                     <div class="img-wrap">
                        <a href="#!" class="popup-modal">
                           <img class="img-responsive" src=<%=@user.photo_one.url%> alt="">
                        </a>
                     </div>
                  </article>
               </div> <!--/row-->
               <div class="e-divider-8"></div>
            </div> <!--/Content Column-->


